@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="sentenceDiv" class="body-content hidden" ng-app="sentenceBuilder" ng-controller="sentenceBuilderController as $ctrl" ng-init="$ctrl.init()">
    <div>
        <h1>{{ $ctrl.pageTitle }}</h1>
        <p ng-repeat="row in $ctrl.pageDesc">{{row}}</p>
    </div>
    <div>
        <button id="startBtn" class="btn btn-success disabled" ng-click="$ctrl.startQuiz()">Start!</button>
    </div>
    <div id="quizDiv" class="hidden">
        <label class="label label-default" id="scoreLabel">Score: {{$ctrl.score}} / {{$ctrl.count}}</label>
        <div>
            <fieldset>
                <label>Words</label>
                <ul class="list-inline list-unstyled">
                    <li ng-repeat="word in $ctrl.shuffledWords track by $index">
                        <button class="btn btn-success"
                                ng-if="$ctrl.answerContains(word) 
                                && $ctrl.wordInRightPlace(word)
                                && $ctrl.uniqueWord(word)" 
                                ng-click="$ctrl.updateAnswer(word)">
                            {{ word }}
                        </button>
                        <button class="btn btn-info"
                                ng-if="$ctrl.answerContains(word)
                                && $ctrl.wordInRightPlace(word)
                                && !$ctrl.uniqueWord(word)"
                                ng-click="$ctrl.updateAnswer(word)">
                            {{ word }}
                        </button>
                        <button class="btn btn-warning" 
                                ng-if="$ctrl.answerContains(word) 
                                && !$ctrl.wordInRightPlace(word)"
                                ng-click="$ctrl.updateAnswer(word)">
                            {{ word }}
                        </button>
                        <button class="btn btn-default" ng-if="!$ctrl.answerContains(word)" ng-click="$ctrl.updateAnswer(word)">{{ word }}</button>
                    </li>
                </ul>
            </fieldset>
        </div>
        <div id="invalidWordsDiv" class="hidden">
            <fieldset>
                <label>Invalid Words</label>
                <ul class="list-inline list-unstyled">
                    <li ng-repeat="word in $ctrl.invalidWords track by $index">
                        <button class="btn btn-danger" ng-click="$ctrl.updateAnswer(word)">{{ word }}</button>
                    </li>
                </ul>
            </fieldset>
        </div>
        <div class="form-group row">
            <form>
                <span class="form-control" contenteditable="true" placeholder="Enter answer" ng-model="$ctrl.answer" ng-change="$ctrl.checkInput()"></span>
                <br/>
                <input autocomplete="off" class="form-control col-xs-12" required id="answer" type="hidden"  ng-model="$ctrl.answer" ng-change="$ctrl.checkInput()" placeholder="Enter answer" />
                <br />
                <button id="submitBtn" ng-click="$ctrl.checkAnswer()" class="btn btn-success">Next!</button>
            </form>
        </div>
    </div>
</div>


