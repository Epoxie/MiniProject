@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="sentenceDiv" class="body-content hidden" ng-app="sentenceBuilder" ng-controller="sentenceBuilderController as $ctrl" ng-init="$ctrl.init()">
    <div>
        <h1>{{ $ctrl.pageTitle }}</h1>
        <p ng-repeat="row in $ctrl.pageDesc">{{row}}</p>
    </div>
    <div>
        <button id="startBtn" class="btn btn-success disabled" ng-click="$ctrl.startQuiz()">Start!</button>
    </div>
    <div id="quizDiv" class="hidden">
        <label class="label label-default" id="scoreLabel">Score: {{$ctrl.score}} / {{$ctrl.count}}</label>
        <div>
            <fieldset>
                <label>Words</label>
                <ul class="list-inline list-unstyled">
                    <li ng-repeat="word in $ctrl.shuffledWords track by $index">
                        <label ng-if="$ctrl.inAnswer(word)" class="label label-success">{{ word }}</label>
                        <label ng-if="!$ctrl.inAnswer(word)" class="label label-info">{{ word }}</label>
                    </li>
                </ul>
            </fieldset>
        </div>
        <div id="extraWordsDiv" class="hidden">
            <fieldset>
                <label>Invalid Words</label>
                <ul class="list-inline list-unstyled">
                    <li ng-repeat="word in $ctrl.extraWords track by $index">
                        <label class="label label-danger">{{ word }}</label>
                    </li>
                </ul>
            </fieldset>
        </div>
        <form class="form-group" ng-submit="$ctrl.checkAnswer()">
            <input required id="answer" type="text" class="form-control" ng-model="$ctrl.answer" ng-change="$ctrl.checkInput()" placeholder="Enter answer" />
            <br/>
            <input class="btn btn-success" type="submit" value="Next!" />
        </form>
    </div>
</div>


